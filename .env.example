# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development

# Mapbox (Required for map features)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.********************************

# Database (PostGIS)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zzik

# Redis (Required for caching, rate limiting, idempotency)
REDIS_URL=redis://localhost:6379

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme-use-openssl-rand-hex-32

# Auth Providers (Optional)
EMAIL_FROM=noreply@zzik.live
RESEND_API_KEY=
OTP_SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Security
SESSION_SECRET=generate-32-char-random-string-here
ENCRYPTION_KEY=generate-32-char-random-string-here
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000     # 1 minute
RATE_LIMIT_MAX_REQUESTS=60     # max requests per window

# Feature Flags
ENABLE_SEARCH=true
ENABLE_REELS=true
ENABLE_ANALYTICS=true

# LABS Features (experimental, disabled by default)
FEATURE_FEED_LABS=false
REQUIRE_AUTH_FOR_VERIFY=false

# Search Implementation
SEARCH_RANK_IMPL=tsrank

# Analytics (Optional, server-side only)
# ANALYTICS_ENDPOINT=https://analytics.zzik.live
# ANALYTICS_API_KEY=your-analytics-api-key

# Monitoring (Optional)
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=