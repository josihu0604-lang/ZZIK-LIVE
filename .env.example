# Environment Configuration Template
# Copy this to .env.local and fill in your actual values

# Node Environment
NODE_ENV=development

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (Optional in development, required in production)
# DATABASE_URL=postgresql://user:password@localhost:5432/zziklive

# Redis (Optional, uses in-memory fallback if not set)
# REDIS_URL=redis://localhost:6379

# Analytics (Optional)
ENABLE_ANALYTICS=false
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_LOCATION_TRACKING=true

# Mapbox (Required for map features)
# MAPBOX_ACCESS_TOKEN=pk.eyJ1IjoieW91ci11c2VybmFtZSIsImEiOiJjbHh4eHh4eHgifQ.xxxxxxxxxxxxxx

# Google OAuth (Optional, for social login)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret

# Sentry Error Monitoring (Optional, recommended for production)
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
# SENTRY_ORG=your-org-name
# SENTRY_PROJECT=your-project-name
# SENTRY_AUTH_TOKEN=your-auth-token

# Vercel (Auto-populated on Vercel)
# NEXT_PUBLIC_VERCEL_ENV=production
# NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=abc123
