# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development

# Mapbox (UI layer only)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Database
DATABASE_URL=postgresql://zzik:zzikpass@localhost:5432/zzik_live

# Auth
EMAIL_FROM=noreply@zzik.live
RESEND_API_KEY=
OTP_SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Security
SESSION_SECRET=generate-32-char-random-string-here
ENCRYPTION_KEY=generate-32-char-random-string-here
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100    # max requests per window

# Feature Flags
ENABLE_SEARCH=true
ENABLE_REELS=true
ENABLE_ANALYTICS=true

# Analytics (server-side only, not exposed to client)
# ANALYTICS_ENDPOINT=https://analytics.zzik.live
# ANALYTICS_API_KEY=your-analytics-api-key
