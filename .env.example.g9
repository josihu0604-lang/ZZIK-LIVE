# ã„±9 Geofence Accuracy Enhancement - Feature Flags
# Copy these to your .env.local file to enable g9 features

# Enable the complete g9 feature set
NEXT_PUBLIC_FEATURE_GEOFENCE_V2=true

# Enable Kalman filtering for GPS smoothing
NEXT_PUBLIC_FEATURE_KALMAN_FILTER=true

# Enable accuracy circles on map
NEXT_PUBLIC_FEATURE_ACCURACY_CIRCLES=true

# Enable distance badges on markers
NEXT_PUBLIC_FEATURE_DISTANCE_BADGES=true

# Enable route pre-validation with Mapbox Directions API
# Note: Requires valid Mapbox token with Directions API access
NEXT_PUBLIC_FEATURE_ROUTE_VALIDATION=false

# Enable GPS telemetry collection
NEXT_PUBLIC_FEATURE_GPS_TELEMETRY=true